  <title>Devinder</title>

  <style>

  #fixedNav {
    width: 100%;
		position: fixed;
		background-color: rgba(0, 0, 0, 0.1);
		padding: 10px 0;
    margin: 0px auto;
    z-index: 3;
	}
	#fixedNav h2 {
    color: white;
		text-align: left;
    display: inline-block;
    margin-bottom: 0px;
	}
  #headerLeft {
    color: white;
    text-align: left;
    display: inline-block;
    margin-left: 20px;
    letter-spacing: .5em;
    text-shadow: 3px 3px black;
    font-weight: 600;
  }
  #headerRight {
    position: absolute;
    right: 10px;
    top: 15px;
  }
  #headerRight a {
    margin-right: 20px;
    text-decoration: none;
    color: #39ff14;
  }
  #headerRight a:hover {
    color: orange;
  }
  .container {
    width: 900px;
    margin: 0px auto;
  }
  #logInLink {
    margin-right: 20px;
		color: #39ff14;
    cursor: pointer;
  }
  #logInLink:hover {
    color: orange;
  }
  .headerSpace {
    height: 80px;
  }
  </style>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="fixedNav">
    <div id="headerLeft">
      <!-- <h2>Devinder</h2> -->
      <img src="/images/devfinder_final_shadow.png" class="img-thumbnail" height="35">
    </div>
    <div id="headerRight">
      <span id="logInLink">Login</span><a href="/">Home</a><a href="/users">Developers</a><a href="/projects">Clients</a>
    </div>
  </div>
<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<%= yield %>

