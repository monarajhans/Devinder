<style>
	#login {
    display: none;
		color: white;
		margin: 10% auto;
    left: 0;
    right: 0;
		width: 460px;
		text-align: center;
		background-color: rgba(0, 0, 0, 0.8);
		padding: 10px;
    position: fixed;
	}
	#regLink {
		font-size: 12px;
		color: #42b972;
		font-weight: bolder;
	}
	#regLink:hover {
    cursor: pointer;
		color: orange;
	}
	#log {
		width: 150px;
	}
	#reg {
		display: none;
	}
	p, h1, h2, label {
		margin: 0px auto;
		color: white;
	}
	input.inputs {
		width: 300px;
		margin: 0px auto;
    height: 20px;
    font-size: 12px;
    text-align: center;
	}
  textarea {
    width: 300px;
		margin: 0px auto;
	}
  input.inputs, textarea.inputs {
    font-size: 12px;
    text-align: center;
  }
	.btn {
		width: 100px;
	}
  a:hover {
    color: orange;
  }
  input.btn {
    margin-top: 10px;
  }
  form {
    margin: 0px;
  }
	#banner .button {
		width: 200px;
		border-radius: 25px;
	}
</style>
<script type="text/javascript">
$(document).ready(function(){
	$("#regLink").click(function(){
		$("#logBtn").slideToggle();
		$("#reg").slideToggle();
	})
  $("#fixedNav").click(function(){
    $("#login").slideToggle(1000);
  })
})
</script>

<div id="login">
		<h2 id="title">Login</h2>
		<p id="regLink">Click here to register</p>
		<form action='/users/new' method='get'>
			<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>

			<p><label for='email'>Email</label>
			<input id="email" name="email" type="text" class="inputs"></p>

			<p><label for='password'>Password</label>
