<section id="main" class="wrapper">
  <div class="container-fluid" style="background-image: url('/images/banner.jpg'); color: white;">
    <header class="major">
      <h2 style="color:white;">Available Developers</h2>
      <p>Here's a list of all our extraordinary programmers.</p>
    </header>
  </div>
</section>
<div class="container">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Title</th>
      <th>Description</th>
      <th style="width:100px;">Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.title %></td>
        <td><%= user.description %></td>
        <td style="width:100px;"><% (1..user.rating/user.total_ratings).each do %>
                  <img src="/images/star.png" style="height:10px; width:10px;">
              <% end %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New User', new_user_path %>
<br>
</div>
