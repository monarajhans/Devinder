      <section id="main" class="wrapper">
        <div class="container-fluid" style="background-image: url('/images/banner.jpg'); color: white;">
          <header class="major">
            <h2 style="color:white; font-size:32px;">Available Projects</h2>
            <p>Here's a list of all our current ongoing projects</p>
          </header>
        </div>
      </section>

<div class="container">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td><%= link_to 'Show', project %></td>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<%= link_to 'New Project', new_project_path %>
<br>
</div>
